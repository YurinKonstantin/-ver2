                    </StackPanel>
                </StackPanel>
                <StackPanel   Canvas.Left="680" Canvas.Top="330" >
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="Кластер 3" FontSize="16"  />
                        <TextBlock Text="Nsob/1h:" FontSize="16" Margin="8,0,0,0" FontWeight="Medium"/>
