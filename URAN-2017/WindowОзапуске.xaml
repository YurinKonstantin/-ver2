<Window x:Class="URAN_2017.WindowОзапуске"
      WindowStyle="None"
        WindowStartupLocation="CenterOwner"
        AllowsTransparency="True"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:URAN_2017"
        mc:Ignorable="d"
        Title="WindowОзапуске" Height="450" Width="800" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" Background="#A5F0F0F0">
    <Window.Foreground>
        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
            <GradientStop Color="Black" Offset="0"/>
            <GradientStop Color="White" Offset="1"/>
        </LinearGradientBrush>
    </Window.Foreground>
    <Grid HorizontalAlignment="Center" VerticalAlignment="Center">
        <Label x:Name="lab"  FontSize="24" FontFamily="Arial"/>
    </Grid>
</Window>
