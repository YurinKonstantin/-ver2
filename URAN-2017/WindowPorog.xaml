<Window x:Class="URAN_2017.WindowPorog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:URAN_2017"
        mc:Ignorable="d"
        Title="WindowPorog" Height="450" Width="800">
    <Grid>
        <StackPanel>
            <TextBlock Text="Текущий порог"/>
            <TextBlock x:Name="porog"/>
            <TextBlock Text="Новый порог"/>
            <TextBox x:Name="newporog"/>
            <Button Content="Применить" Click="Button_Click"/>
        </StackPanel>
    </Grid>
</Window>
