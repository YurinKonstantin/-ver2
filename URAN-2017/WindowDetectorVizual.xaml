<Window x:Class="URAN_2017.WindowDetectorVizual"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:URAN_2017"
        mc:Ignorable="d"
        Title="WindowDetectorVizual" Height="1000" Width="1500">
    <Grid ScrollViewer.VerticalScrollBarVisibility="Visible" ScrollViewer.HorizontalScrollBarVisibility="Visible">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="auto"/>
        </Grid.ColumnDefinitions>
        <local:UserControlURAN Margin="8" x:Name="controlDetector"/>
        <Button Width="40" Height="40" Content="reset" HorizontalAlignment="Left" Click="Button_Click"/>
        <TextBlock VerticalAlignment="Top" HorizontalAlignment="Left" Margin="8" x:Name="tecSos"/>
        <ProgressBar Width="600" Height="20" x:Name="prog" Visibility="Collapsed" IsIndeterminate="True"/>
    </Grid>
</Window>
